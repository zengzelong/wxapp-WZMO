/* pages/user/index.wxss */

.page {
  background: #5ca6ef;
}

.user__hd {
    padding: 10px 0 40px 15px;
}

.user__title {
    text-align: left;
    font-size: 24px;
    font-weight: bold;
    color: #FFF;
}

.user__desc {
    color: #EEE;
    text-align: left;
    font-size: 16px;
}

.weui-cell {
  padding: 15px;
}

.weui-cell__bd {
  font-size: 16px;
}



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}